modules = ["nodejs-20", "postgresql-16", "python-3.11", "python3"]

[nix]
channel = "stable-24_05"
packages = ["librsvg"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MarketPace Full Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MarketPace Clean Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MarketPace Minimal Server"

[[workflows.workflow]]
name = "MarketPace Full Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx server/index.ts"
waitForPort = 5000

[[workflows.workflow]]
name = "MarketPace Clean Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx server/clean-server.ts"
waitForPort = 5000

[[workflows.workflow]]
name = "MarketPace Minimal Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/minimal-server.js"
waitForPort = 5000

[[ports]]
